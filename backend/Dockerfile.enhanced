# Enhanced Dockerfile for Aura Music Backend with AI Features
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies including FFmpeg for audio processing
RUN apt-get update && apt-get install -y \
    curl \
    ffmpeg \
    build-essential \
    libsndfile1 \
    libasound2-dev \
    portaudio19-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies
COPY requirements-basic.txt .
RUN pip install --no-cache-dir -r requirements-basic.txt

# Install additional AI/ML dependencies
RUN pip install --no-cache-dir \
    torch==2.1.0 \
    torchaudio==2.1.0 \
    transformers==4.35.0 \
    librosa==0.10.1 \
    soundfile==0.12.1 \
    scikit-learn==1.3.2 \
    openai-whisper==20231117

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p uploads logs models

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV TORCH_HOME=/app/models

# Download Whisper model on startup
RUN python -c "import whisper; whisper.load_model('base')"

# Expose port
EXPOSE 8000

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run the application with enhanced logging
CMD ["uvicorn", "main-simple:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4", "--log-level", "info"]
